{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "array",
  "title": "Personnages",
  "description": "La liste des personnages.",
  "required": [],
  "items": {
    "title": "Personnage",
    "description": "La définition du personnage utilisé pour le jeu de rôle Cyberpunk RED.",
    "type": "object",
    "required": [
      "pseudo",
      "role",
      "carac",
      "competences",
      "materiel"
    ],
    "properties": {
      "pseudo": {
        "type": "string",
        "title": "Pseudo",
        "description": "Nom du personnage."
      },
      "role": {
        "type": "object",
        "title": "Rôle",
        "description": "Rôle utilisé pour le personnage. Cela va définir sa capacité. Au début d'une campagne Cyberpunk RED, les personnages joueurs commencent au rang 4",
        "required": [
          "nom",
          "capacite",
          "rang"
        ],
        "properties": {
          "nom": {
            "type": "string",
            "title": "Nom du rôle",
            "description": "Nom du rôle utilisé pour le personnage.",
            "enum": [
              "Rockeur",
              "Solo",
              "Netrunner",
              "Techie",
              "Medtech",
              "Média",
              "Corporatiste",
              "Justicier",
              "Fixer",
              "Nomade"
            ]
          },
          "capacite": {
            "type": "string",
            "title": "Capacite du rôle",
            "description": "Capacite du rôle utilisé pour le personnage."
          },
          "rang": {
            "type": "number",
            "title": "Rang",
            "description": "Rang/niveau de la capacité du personnage. [1-10]",
            "minimum": 1,
            "maximum": 10
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "nom": {
                  "const": "Rockeur"
                }
              }
            },
            "then": {
              "properties": {
                "capacite": {
                  "const": "Charisme Irrésistible"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "nom": {
                  "const": "Solo"
                }
              }
            },
            "then": {
              "properties": {
                "capacite": {
                  "const": "Conscience Tactique"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "nom": {
                  "const": "Netrunner"
                }
              }
            },
            "then": {
              "properties": {
                "capacite": {
                  "const": "Interface"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "nom": {
                  "const": "Techie"
                }
              }
            },
            "then": {
              "properties": {
                "capacite": {
                  "const": "Bricoleur"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "nom": {
                  "const": "Medtech"
                }
              }
            },
            "then": {
              "properties": {
                "capacite": {
                  "const": "Médecine"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "nom": {
                  "const": "Média"
                }
              }
            },
            "then": {
              "properties": {
                "capacite": {
                  "const": "Crédibilité"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "nom": {
                  "const": "Corporatiste"
                }
              }
            },
            "then": {
              "properties": {
                "capacite": {
                  "const": "Travail d'équipe"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "nom": {
                  "const": "Justicier"
                }
              }
            },
            "then": {
              "properties": {
                "capacite": {
                  "const": "Renforts"
                }
              }
            }
          },
