            "$ref": "#/$defs/carac"
          },
          "TECH": {
            "title": "Technique",
            "description": "L'abilité du personnage à employer du matériel technique ou nécessitant de la technique (Ex. arts).",
            "$ref": "#/$defs/carac"
          },
          "PRES": {
            "title": "Prestance",
